---
import "../global.css";
---

<!doctype html>
<html lang="en" class="light">
  <!-- Default light, cambiarÃ¡ con toggle -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mangoland</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-[var(--color-background)] text-[var(--color-text)] font-[var(--font-primary)] transition-colors duration-300 min-h-screen"
  >
    <slot />

    <!-- Dark Mode Persistence Script -->
    <script>
      const savedTheme = localStorage.getItem("theme");
      const html = document.documentElement;
      if (savedTheme) {
        html.className = savedTheme;
      } else {
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        html.className = prefersDark ? "dark" : "light";
      }
    </script>
  </body>
</html>
